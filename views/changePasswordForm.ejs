<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
	<title>Renderscan</title>
</head>

<body>
	<div class="container-sm">
		<h2 style="text-align: center; margin: 4rem 0;">Renderscan</h2>

		<% if(warning){ %>
			<div id="alert" class="alert alert-warning" role="alert">
				<div>*Password Required</div>
				<div>*Min 8 chars</div>
				<div>*Max 15 chars</div>
				<div>*Should contain one numeric</div>
				<div>*Should contain one special char</div>
				<div>*Password confirm password should be same</div>
			</div>
			<% } %>

				<% if(success){ %>
					<div id="alert" class="alert alert-success" role="alert">
						<div>Password changed successfully</div>
					</div>
					<% } %>

						<form method="post" style="display: flex; justify-content: center; flex-direction: column;">
							<div class="mb-3">
								<label class="form-label">Password</label>
								<input type="password" class="form-control" name="password" id="password"
									placeholder="Password">
							</div>
							<div class="mb-3">
								<label class="form-label">Confirm Password</label>
								<input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
									placeholder="Confirm password">
							</div>
							<div>
								<button type="submit" class="btn btn-primary">Change Password</button>
							</div>
						</form>
	</div>
</body>

</html>